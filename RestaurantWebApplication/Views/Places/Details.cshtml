@model RestaurantWebApplication.Models.Place

@{
    ViewData["Title"] = "Landing Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .contact-section {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            width: 190px;
            padding: 10px;
            background-color: #f8f9fa;
        }

        .main-content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="contact-section">
        <h3>Contact Us</h3>
        <p>Address: Kyiv, Sechenova 6</p>
        <p>Email: info@ukr.net</p>
        <p>Phone: +380675432121</p>
    </div>

    <div class="main-content">
        <h1>Landing Page</h1>
        <div class="row">
            <div class="col-md-6">
                <h4>Place Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Average Bill:</dt>
                    <dd class="col-sm-8">@Model.AverageBill</dd>

                    <dt class="col-sm-4">Open Time:</dt>
                    <dd class="col-sm-8">@Model.OpenTime</dd>

                    <dt class="col-sm-4">Close Time:</dt>
                    <dd class="col-sm-8">@Model.CloseTime</dd>

                    <dt class="col-sm-4">Location:</dt>
                    <dd class="col-sm-8">@Model.Location</dd>

                    <dt class="col-sm-4">Type:</dt>
                    <dd class="col-sm-8">@Model.Type.Id</dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>